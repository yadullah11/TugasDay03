<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".hublotrainbow">

    <ImageView
        android:id="@+id/hubrainbow"
        android:background="@drawable/hublot_rainbow"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:layout_width="250dp"
        android:layout_height="250dp"/>
    <TextView
        android:id="@+id/textrainbow"
        android:text="UNICO TITANIUM RAINBOW"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_below="@+id/hubrainbow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/spekrainbow"
        android:text="Set Titanium Selesai Satin dan Dipoles dengan 162 Rubi, Safir Merah Muda, Batu Kecubung, Safir Biru, Topaz Biru, Tsavorit, Safir Kuning dan Oranye dan bingkainya Set Emas Putih 18K berlapis satin dan dipoles dengan 48 Batu Permata Berwarna potongan Baguette. "
        android:layout_below="@id/textrainbow"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/hargarainbow"
        android:text="PRICE : Rp.1.240.000.000"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:layout_below="@id/spekrainbow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btnbuyrainbow"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/hargarainbow"
        android:layout_marginLeft="100dp"
        android:text="Buy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btnsharerainbow"
        android:text="Share"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@+id/btnbuyrainbow"
        android:layout_below="@+id/hargarainbow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>