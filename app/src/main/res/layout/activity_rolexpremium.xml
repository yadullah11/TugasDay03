<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="rolexpremium">

    <ImageView
        android:id="@+id/rolpremium"
        android:background="@drawable/rolex_steel"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:layout_width="250dp"
        android:layout_height="250dp"/>
    <TextView
        android:id="@+id/textpremium"
        android:text="ROLEX STEEL AND YELLOW GOLD"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_below="@+id/rolpremium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/spekpremium"
        android:text="Rolesor Kuning 41 mm dengan casing tengah monoblok baja 904L, bagian belakang baja yang disekrup, kenop sekrup di bawah emas kuning 18K, bingkai cincin bergalur emas kuning 18K , kristal safir anti-reflektif ganda anti gores dengan lensa cyclops pada tanggal, pelat jam hitam. "
        android:layout_below="@id/textpremium"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/hargapremium"
        android:text="PRICE : Rp.298.000.000"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:layout_below="@id/spekpremium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btnbuypremium"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/hargapremium"
        android:layout_marginLeft="100dp"
        android:text="Buy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btnsharepremium"
        android:text="Share"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@+id/btnbuypremium"
        android:layout_below="@+id/hargapremium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>